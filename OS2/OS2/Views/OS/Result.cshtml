@model OS2.Models.Process

@{
    ViewBag.Title = "Result";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Result</h2>
<div>
    <h4>Process</h4>
    <h4></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Number of Process")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumberOfProcess)
        </dd>
        <div class="progress progress-striped">
            <div class="progress-bar progress-bar-striped" style="width: 20%"></div>
        </div>

        <dt>
            @Html.DisplayName("Average Waiting Time")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AverageWaitTime)
        </dd>

        <div class="progress progress-striped">
            <div class="progress-bar progress-bar-info" style="width: 40%"></div>
        </div>
        <dt>
            @Html.DisplayName("AverageTurnAroundTime")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AverageTurnaroundTime)
        </dd>

        <div class="progress progress-striped">
            <div class="progress-bar progress-bar-success" style="width: 60%"></div>
        </div>
        <dt>
            @Html.DisplayName("AverageResponseTime")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AverageResponseTime)
        </dd>

        <div class="progress progress-striped">
            <div class="progress-bar progress-bar-warning" style="width: 80%"></div>
        </div>

        <hr style="margin-top: 5px;">
        <div class="row">
            @for (int i = 0; i < Model.ProList.Count; i++)
            {
                <div class="col-sm-4">
                    <div class="card-body">

                        <dt>
                            @Html.DisplayNameFor(model => model.ProList[i].ProcessId)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ProList[i].ProcessId)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.ProList[i].ProcessWaitTime)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ProList[i].ProcessWaitTime)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.ProList[i].ProcessTurnaround)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ProList[i].ProcessTurnaround)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.ProList[i].ProcessResponse)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ProList[i].ProcessResponse)
                        </dd>
                    </div>
                </div>
            }

        </div>
    </dl>
</div>